{
  "exclude": [
    "./node_modules", "./dist", "./src/**/__mocks__", "./src/database/data"
  ],
  "files": ["./src/augmentations.d.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["*"],
      "@src/*": ["src/*"],
      "@unitTests/*": ["test/unit/*"],
      "@frontend/*": ["src/frontend/*"],
      "@middleware/*": ["src/middleware/*"],
      "@database/*": ["src/database/*"],
      "@commons/*": ["commons/*"]
    }
  }
}
